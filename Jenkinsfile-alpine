pipeline {
  agent {
    docker {
      image 'pipelinepowertool-ssh_agent-alpine-make'
      args '-u root:root'
    }
  }
  stages {
    stage('Build against Alpine Jenkins SSH Agent') {
      steps {
        sh 'make'
        sh 'mv build/energy_reader build/energy_reader-jenkins-alpine'
        withAWS(region:'eu-north-1',credentials:'jenkins-s3') {
          sh 'echo "Uploading content with AWS creds"'
          s3Upload(file:'./build/energy_reader-jenkins-alpine', bucket:'energy-reader', acl: 'PublicRead')
        }
      }
    }
  }
}