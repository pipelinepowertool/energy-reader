pipeline {
  agent {
    docker {
      image 'sdenboer/pipelinepowertool-ssh_agent-default-make'
      args '-it --entrypoint=/bin/bash'
    }
  }
  stages {
    stage('Build against Ubuntu') {
      steps {
        sh 'make'
        sh 'mv build/energy_reader build/energy_reader-default'
        withAWS(region:'eu-north-1',credentials:'jenkins-s3') {
          sh 'echo "Uploading content with AWS creds"'
          s3Upload(file:'./build/energy_reader-default', bucket:'energy-reader', acl: 'PublicRead')
        }
      }
    }
  }
}